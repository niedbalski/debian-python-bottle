#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

override_dh_auto_build:
	dh_auto_build
	$(MAKE) -C apidoc dirhtml

override_dh_installdocs:
	dh_installdocs
	mv $(CURDIR)/debian/python-bottle/usr/share/doc/python-bottle/dirhtml/ \
	   $(CURDIR)/debian/python-bottle/usr/share/doc/python-bottle/api/

override_dh_compress:
	dh_compress -Xpython-bottle/api

override_dh_auto_clean:
	dh_auto_clean
	$(MAKE) -C apidoc clean

%:
	dh  $@
